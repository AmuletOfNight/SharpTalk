@using SharpTalk.Web.Shared
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <Sidebar OnWorkspaceSelected="HandleWorkspaceSelected" />
    </div>

    @if (CurrentWorkspaceId.HasValue)
    {
        <div class="channel-sidebar">
            <ChannelList WorkspaceId="CurrentWorkspaceId.Value" />
        </div>
    }

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private int? CurrentWorkspaceId;

    private void HandleWorkspaceSelected(int workspaceId)
    {
        CurrentWorkspaceId = workspaceId;
    }
}

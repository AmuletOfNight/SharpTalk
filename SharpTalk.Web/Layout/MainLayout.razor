@using SharpTalk.Web.Shared
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <Sidebar OnWorkspaceSelected="HandleWorkspaceSelected" />
    </div>

    @if (CurrentWorkspaceId.HasValue)
    {
        <div class="channel-sidebar">
            <ChannelList WorkspaceId="CurrentWorkspaceId.Value" OnChannelSelected="HandleChannelSelected" />
        </div>
    }

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @if (CurrentChannelId.HasValue)
            {
                <ChatArea ChannelId="CurrentChannelId.Value" />
            }
            else
            {
                <h3>Select a channel to start chatting</h3>
            }
        </article>
    </main>
</div>

@code {
    private int? CurrentWorkspaceId;
    private int? CurrentChannelId;

    private void HandleWorkspaceSelected(int workspaceId)
    {
        CurrentWorkspaceId = workspaceId;
        CurrentChannelId = null; // Reset channel when workspace changes
    }

    private void HandleChannelSelected(int channelId)
    {
        CurrentChannelId = channelId;
    }
}

@page "/register"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@using SharpTalk.Shared.DTOs
@layout SharpTalk.Web.Layout.LandingLayout
@using SharpTalk.Web.Auth
@using System.Net.Http.Json
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<div class="splash-brand">Sharp<span>Talk</span></div>

<div class="auth-container">
    <h3>Create an account</h3>
    <div class="auth-subtitle">Join the conversation today!</div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="auth-alert">@ErrorMessage</div>
    }

    <EditForm Model="registerRequest" OnValidSubmit="HandleRegistration">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label>Username</label>
            <InputText @bind-Value="registerRequest.Username" class="form-control" placeholder="Choose a username" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <InputText @bind-Value="registerRequest.Email" class="form-control" placeholder="Enter your email" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <InputText @bind-Value="registerRequest.Password" type="password" class="form-control"
                placeholder="Create a password" />
        </div>

        <button type="submit" class="btn btn-success">Register</button>

        <div class="auth-footer-link">
            Already have an account? <a href="/login">Login</a>
        </div>
    </EditForm>
</div>

@code {
    private RegisterRequest registerRequest = new RegisterRequest();
    private string ErrorMessage = string.Empty;

    private async Task HandleRegistration()
    {
        ErrorMessage = string.Empty;
        var response = await Http.PostAsJsonAsync("api/auth/register", registerRequest);

        if (response.IsSuccessStatusCode)
        {
            var authResponse = await response.Content.ReadFromJsonAsync<AuthResponse>();
            await LocalStorage.SetItemAsync("authToken", authResponse.Token);
            await ((CustomAuthStateProvider)AuthStateProvider).MarkUserAsAuthenticatedWithUserInfo(authResponse.Token,
            authResponse);
            Navigation.NavigateTo("/home");
        }
        else
        {
            ErrorMessage = await response.Content.ReadAsStringAsync();
        }
    }
}

@using SharpTalk.Shared.DTOs
@using SharpTalk.Shared.Enums
@using SharpTalk.Web.Services
@using SharpTalk.Shared
@inject WorkspaceService WorkspaceService
@inject ChannelService ChannelService
@inject UrlUtilityService UrlUtilityService

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Group DM</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Group Name (optional)</label>
                        <input type="text" class="form-control" placeholder="Enter group name"
                               @bind="GroupName" @bind:event="oninput" maxlength="100" />
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <label class="form-label mb-0">Select Members (@(SelectedUsers.Count)/@ChatConstants.GroupDMMaxAdditionalMembers)</label>
                            <span class="text-muted small">Search and select users from your workspaces</span>
                        </div>
                        
                        <div class="mb-2">
                            <input type="text" class="form-control" placeholder="Search users..." 
                                   @bind="searchTerm" @bind:event="oninput" />
                        </div>
                        
                        <div class="user-select-list" style="max-height: 300px; overflow-y: auto;">
                            @if (isLoading)
                            {
                                <div class="text-center p-3">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                var filteredUsers = FilteredUsers;
                                @if (!filteredUsers.Any())
                                {
                                    <div class="text-muted text-center p-3">No users found</div>
                                }
                                else
                                {
                                    @foreach (var user in filteredUsers)
                                    {
                                        <button class="list-group-item list-group-item-action d-flex align-items-center @(SelectedUsers.Contains(user.UserId) ? "selected" : "")"
                                                @onclick="() => ToggleUserSelection(user)">
                                            <div class="form-check me-3">
                                                <input type="checkbox" class="form-check-input" 
                                                       checked="@SelectedUsers.Contains(user.UserId)" 
                                                       @onchange="(e) => ToggleUserSelection(user)" />
                                            </div>
                                            <div class="member-avatar-wrapper me-3">
                                                <img src="@UrlUtilityService.GetAvatarUrl(user.AvatarUrl, "s")" 
                                                     class="member-avatar-list @(user.Status.ToLower())" 
                                                     alt="@user.Username" />
                                            </div>
                                            <div>
                                                <div class="fw-bold">@user.Username</div>
                                            </div>
                                        </button>
                                    }
                                }
                            }
                        </div>
                    </div>

                    @if (SelectedUsers.Any())
                    {
                        <div class="selected-users-preview">
                            <small class="text-muted">Selected:</small>
                            <div class="d-flex flex-wrap gap-1 mt-1">
                                @foreach (var userId in SelectedUsers.Take(5))
                                {
                                    var user = AllUsers.FirstOrDefault(u => u.UserId == userId);
                                    if (user != null)
                                    {
                                        <span class="badge bg-primary">
                                            @user.Username
                                            <button type="button" class="btn-close btn-close-white ms-1" style="font-size: 0.6rem;"
                                                    @onclick="() => RemoveSelectedUser(user)"></button>
                                        </span>
                                    }
                                }
                                @if (SelectedUsers.Count > 5)
                                {
                                    <span class="badge bg-secondary">+@(SelectedUsers.Count - 5) more</span>
                                }
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateGroup" 
                            disabled="@(!CanCreate || isCreating)">
                        @if (isCreating)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Create Group (@(SelectedUsers.Count + 1) members)
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int WorkspaceId { get; set; }

    [Parameter]
    public EventCallback<ChannelDto> OnGroupCreated { get; set; }

    [Inject] AuthenticationStateProvider AuthStateProvider { get; set; } = default!;

    private bool Show = false;
    private bool isLoading = false;
    private bool isCreating = false;
    private string searchTerm = "";
    private string groupName = "";
    private List<UserStatusDto> AllUsers = new List<UserStatusDto>();
    private HashSet<int> SelectedUsers = new HashSet<int>();
    private int currentUserId;

    private string GroupName
    {
        get => groupName;
        set
        {
            groupName = value;
            StateHasChanged();
        }
    }

    private IEnumerable<UserStatusDto> FilteredUsers => 
        string.IsNullOrWhiteSpace(searchTerm) 
            ? AllUsers 
            : AllUsers.Where(u => u.Username.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));

    private bool CanCreate => SelectedUsers.Count >= ChatConstants.GroupDMMinMembers - 1 
                              && SelectedUsers.Count <= ChatConstants.GroupDMMaxAdditionalMembers;

    public async Task Open()
    {
        Show = true;
        searchTerm = "";
        groupName = "";
        SelectedUsers.Clear();
        
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var userIdStr = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        if (int.TryParse(userIdStr, out int userId))
        {
            currentUserId = userId;
        }

        await LoadUsers();
        StateHasChanged();
    }

    public void Close()
    {
        Show = false;
        StateHasChanged();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        try
        {
            List<UserStatusDto> allUsersInfo = new List<UserStatusDto>();
            
            if (WorkspaceId > 0)
            {
                allUsersInfo = await WorkspaceService.GetWorkspaceMembersAsync(WorkspaceId);
            }
            else
            {
                // Global mode: Fetch from all workspaces
                var workspaces = await WorkspaceService.GetMyWorkspacesAsync();
                foreach (var ws in workspaces)
                {
                    var members = await WorkspaceService.GetWorkspaceMembersAsync(ws.Id);
                    allUsersInfo.AddRange(members);
                }
            }
            
            // Filter out self and duplicate users
            AllUsers = allUsersInfo
                .Where(u => u.UserId != currentUserId)
                .GroupBy(u => u.UserId)
                .Select(g => g.First())
                .ToList();
        }
        catch (Exception)
        {
            // Handle error
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleUserSelection(UserStatusDto user)
    {
        if (SelectedUsers.Contains(user.UserId))
        {
            SelectedUsers.Remove(user.UserId);
        }
        else
        {
            if (SelectedUsers.Count < ChatConstants.GroupDMMaxAdditionalMembers)
            {
                SelectedUsers.Add(user.UserId);
            }
        }
        StateHasChanged();
    }

    private void RemoveSelectedUser(UserStatusDto user)
    {
        SelectedUsers.Remove(user.UserId);
        StateHasChanged();
    }

    private async Task CreateGroup()
    {
        if (!CanCreate) return;

        isCreating = true;
        try
        {
            var request = new CreateGroupDMRequest
            {
                WorkspaceId = WorkspaceId > 0 ? (int?)WorkspaceId : null,
                MemberIds = SelectedUsers.ToList(),
                Name = string.IsNullOrWhiteSpace(GroupName) ? null : GroupName.Trim()
            };

            var channel = await ChannelService.CreateGroupDMAsync(request);
            
            if (channel != null)
            {
                await OnGroupCreated.InvokeAsync(channel);
                Close();
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        finally
        {
            isCreating = false;
        }
    }
}

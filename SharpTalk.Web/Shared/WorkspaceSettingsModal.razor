    private async Task CreateInviteLink()
    {
        if (Workspace == null) return;
        IsCreatingLink = true;
        CreatedLink = "";
        Error = "";
        StateHasChanged();

        try 
        {
            DateTime? expiresAt = newLinkExpirationDays > 0 ? DateTime.UtcNow.AddDays(newLinkExpirationDays) : null;
            var request = new CreateInviteLinkRequest 
            { 
                WorkspaceId = Workspace.Id,
                MaxUses = newLinkMaxUses,
                ExpiresAt = expiresAt
            };

            var code = await WorkspaceService.CreateInviteLinkAsync(request);
            if (!string.IsNullOrEmpty(code))
            {
                // Construct full URL (assuming base URL)
                var uri = Navigation.BaseUri;
                CreatedLink = $"{uri}join/{code}";
                await LoadInvitations();
            }
            else
            {
                Error = "Failed to create invite link.";
            }
        }
        catch (Exception ex)
        {
            Error = $"Error creating link: {ex.Message}";
        }
        finally
        {
            IsCreatingLink = false;
            StateHasChanged();
        }
    }


@using SharpTalk.Web.Layout
@using SharpTalk.Shared.DTOs

<div class="mobile-nav">
    @if (CurrentView == MobileView.ChannelList)
    {
        <button class="nav-btn back-btn" @onclick="OnBack" title="Back">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
        </button>
    }
    else if (CurrentView == MobileView.ChatArea)
    {
        <button class="nav-btn back-btn" @onclick="OnBack" title="Back">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
        </button>
    }

    <div class="nav-title">
        @if (CurrentView == MobileView.ChatArea && CurrentChannel != null)
        {
            <div class="nav-title-content">
                <span class="nav-title-name">@CurrentChannel.Name</span>
                @if (!string.IsNullOrEmpty(CurrentChannel.Description))
                {
                    <span class="nav-title-desc">@CurrentChannel.Description</span>
                }
            </div>
        }
        else if (CurrentView == MobileView.ChannelList && CurrentWorkspace != null)
        {
            <div class="nav-title-content">
                <span class="nav-title-name">Channels</span>
                <span class="nav-title-desc">@CurrentWorkspace.Name</span>
            </div>
        }
        else
        {
            @GetViewTitle()
        }
    </div>

    @if (CurrentView == MobileView.ChannelList && CurrentWorkspace != null)
    {
        <button class="nav-btn settings-btn" @onclick="OnMenuToggle" title="Workspace Settings">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
            </svg>
        </button>
    }
</div>

@code {
    [Parameter]
    public MobileView CurrentView { get; set; }

    [Parameter]
    public EventCallback OnBack { get; set; }

    [Parameter]
    public EventCallback OnMenuToggle { get; set; }

    [Parameter]
    public ChannelDto? CurrentChannel { get; set; }

    [Parameter]
    public WorkspaceDto? CurrentWorkspace { get; set; }

    private string GetViewTitle()
    {
        return CurrentView switch
        {
            MobileView.WorkspaceList => "Workspaces",
            _ => ""
        };
    }
}
